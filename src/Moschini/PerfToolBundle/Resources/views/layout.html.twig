{% extends "::base.html.twig" %}

{% block title '' %}

{% block body %}
    <nav class="navbar navbar-default" role="navigation">

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('moschini_perftool_default_time', {'site': app.request.get('site')}) }}">Monitoring</a></li>
            <li class="divider-vertical"></li>
            <li><a href="{{ path('moschini_perftool_default_graph', {'site': app.request.get('site')}) }}">Histograms</a></li>
            <li class="divider-vertical"></li>
            <li><a href="{{ path('moschini_perftool_default_index', {'site': app.request.get('site')}) }}">Waterfall</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ path('moschini_perftool_sites_index', {'site': app.request.get('site')}) }}">Manage sites</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>

    <div class="container">

        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-message">
                <em>Notice</em>: {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="block">
            {% block content %}{% endblock %}
        </div>
    </div>

{% endblock %}
